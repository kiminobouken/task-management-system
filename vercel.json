{
  "version": 2,
  "rewrites": [
    { "source": "/src/(.*)", "destination": "/src/$1" },
    { "source": "/styles.css", "destination": "/public/styles.css" },
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "headers": [
    {
      "source": "/src/(.*\\.js)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    }
  ]
}