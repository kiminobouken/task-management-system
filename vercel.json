{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "routes": [
    {
      "src": "/src/(.*\\.js)",
      "dest": "/src/$1",
      "headers": {
        "Content-Type": "application/javascript; charset=utf-8"
      }
    }
  ]
}